<main>
<div class="section-container">
    <div class="content">
        
            <form method="POST" action='@Url.Action("CadastrarCliente", "Cadastro")'>

                <section id="Cadastro"> 

                        <h1>Cadastro</h1>

                <section id="usuario">
                <label for="usuario">Usuario</label>
                <br />
                <input type="text" name="usuario">
                </section>

                <section id="nome">
                <label>Nome</label>
                <br />
                <input id="nome" name="nome" type="text" maxlength="20" minlength="1" placeholder="Nome completo" >
                </section>

                <section id="email">
                <label>E-mail</label>
                <br />
                <input id="email" name="email" type="email" maxlength="20" minlength="1" placeholder="E-mail">
                </section>

                <section id="telefone">
                <label>Telefone</label>
                <br />
                <input id="telefone" name="telefone" type="number" maxlength="20" minlength="1" placeholder="Telefone" maxlength="3" />
                </section>

                <section id="cpf">
                <label>CPF</label>
                <br />
                <input id="CPF" name="cpf"  type="number" maxlength="20" minlength="1" placeholder="CPF ou CNPJ" />
                </section>

                <section id="Data">
                <label>Data de Nascimento</label>
                <br />
                <input id="date" name="data-nascimento"  type="date" placeholder="Data de nascimento" />
                </section>
                
                <section id="senha">
                <label>Senha</label>
                <br />
                <input id="senha" name="senha"  type="password" maxlength="20" minlength="1"placeholder="Senha" />
                </section>
                <section id="termos">
                    
                    <label><input type="checkbox" checked="checked" name="Termos"> Li e concordo com os termos de uso.</label></section>
                        
                    <section id="enviar-cadastro">
                            <p><input type="submit" value="Finalizar cadastro" />Cadastrar</p>
                            </section>
                
                <div id="loga">
                <a href='@Url.Action("Login", "Cliente")'> Ir para Login</a> 
            </form>
        </div>
    </div>
</div>
</section>
</main>