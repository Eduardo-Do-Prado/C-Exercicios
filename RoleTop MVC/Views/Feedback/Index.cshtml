<main>
<div class="section-container">
<div class="content">
        <h1>FAQ</h1>

        <section id="Faq">

        <h2>Pergunta</h2>
        <p>Quais as formas de pagamento?</p>

        <h2>Resposta</h2>
        <p>Cartão de crédito, PayPal, Débito em conta corrente, Boleto Bancário, Criptomoedas.</p>
        <p> Agradecemos sua pergunta</p>
        </section>

        <section id="Faq">
                <label for="FAQ">Adicione sua pergunta</label>
                <br />
                <input type="text" name="faq" required="required">
        </section>

        <section id="enviar-feedback">
        @if(string.IsNullOrEmpty(@Model.Usuario))
                {
                <a href='@Url.Action("Index", "Cadastro")'>Enviar Pergunta</a>
                }else
                {
                <a type="submit" value="Enviar">Enviar Pergunta</a>
                }
        </section>

        <section id="Opiniao">

        <h1>Opiniões dos usuários</h1>

                <h2>Gerson</h2>
                <p>Serviço bom, iluminação boa, iom de boa qualidade</p>
                <p> Muito bom</p>
        </section>

        <section id="Opiniao">
                <label for="opinião">Adicione sua opinião</label>
                <br />
                <input type="text" name="opiniao" required="required">
            </section>

        <section id="enviar-feedback">
                @if(string.IsNullOrEmpty(@Model.Usuario))
                {
                <a href='@Url.Action("Index", "Cadastro")'>Enviar Opinião</a>
                }else
                {
                <a type="submit" value="Enviar">Enviar Opinião</a>
                }
        </section>
        </div>
</main>